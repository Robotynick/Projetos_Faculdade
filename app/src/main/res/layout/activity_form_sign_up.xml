<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_login"
    tools:context=".FormSignUp">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="25dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#E5E5E5"
                android:src="@drawable/logo_eprocad"
                android:layout_marginTop="80dp"
                app:layout_constraintBottom_toTopOf="@id/containerComponents"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/contentDescription_logo" />

            <View
                android:id="@+id/containerComponents"
                style="@style/ContainerComponents"
                app:layout_constraintTop_toBottomOf="@id/logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />




            <EditText
                android:id="@+id/edit_name_sign_up"
                style="@style/Edit_Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxWidth="320dp"
                android:autofillHints="name"
                android:drawableStart="@drawable/ic_person"
                android:hint="@string/text_name_sign_up"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColorHint="#757575"
                app:layout_constraintEnd_toEndOf="@id/containerComponents"
                app:layout_constraintStart_toStartOf="@id/containerComponents"
                app:layout_constraintTop_toTopOf="@id/containerComponents"
                app:layout_constraintWidth_percent="0.60"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/edit_age"
                style="@style/Edit_Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxWidth="320dp"
                android:autofillHints="creditCardNumber"
                android:drawableStart="@drawable/ic_email"
                android:hint="@string/text_age_sign_up"
                android:inputType="number"
                android:minHeight="48dp"
                android:textColorHint="#757575"
                app:layout_constraintEnd_toEndOf="@id/containerComponents"
                app:layout_constraintStart_toStartOf="@id/containerComponents"
                app:layout_constraintTop_toBottomOf="@id/edit_name_sign_up"
                app:layout_constraintWidth_percent="0.60"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/edit_email_sing_up"
                style="@style/Edit_Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxWidth="320dp"
                android:autofillHints="emailAddress"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textColorHint="#757575"
                app:layout_constraintEnd_toEndOf="@id/containerComponents"
                app:layout_constraintStart_toStartOf="@id/containerComponents"
                app:layout_constraintTop_toBottomOf="@id/edit_age"
                app:layout_constraintWidth_percent="0.60"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/edit_password_sign_up"
                style="@style/Edit_Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxWidth="320dp"
                android:autofillHints="password"
                android:drawableStart="@drawable/ic_locker_password"
                android:hint="@string/text_password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColorHint="#757575"
                app:layout_constraintEnd_toEndOf="@id/containerComponents"
                app:layout_constraintStart_toStartOf="@id/containerComponents"
                app:layout_constraintTop_toBottomOf="@id/edit_email_sing_up"
                app:layout_constraintWidth_percent="0.60"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/edit_confirm_password_sign_up"
                style="@style/Edit_Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxWidth="320dp"
                android:autofillHints="emailAddress"
                android:drawableStart="@drawable/ic_locker_password"
                android:hint="@string/text_confirm_password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColorHint="#757575"
                app:layout_constraintEnd_toEndOf="@id/containerComponents"
                app:layout_constraintStart_toStartOf="@id/containerComponents"
                app:layout_constraintTop_toBottomOf="@id/edit_password_sign_up"
                app:layout_constraintWidth_percent="0.60"
                tools:ignore="TextContrastCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_sent"
                style="@style/Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxWidth="320dp"
                android:layout_marginTop="70dp"
                android:text="@string/bt_sign_up"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/containerComponents"
                app:layout_constraintStart_toStartOf="@id/containerComponents"
                app:layout_constraintTop_toBottomOf="@id/edit_confirm_password_sign_up"
                app:layout_constraintWidth_percent="0.45"
                tools:ignore="TextSizeCheck"/>

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.53"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageView
                android:layout_width="399dp"
                android:layout_height="379dp"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="-207dp"
                android:layout_marginBottom="-120dp"
                android:scaleType="fitXY"
                android:src="@drawable/bola_azul_inferior"
                android:contentDescription="@string/contentDescription_Bola_azul_inferior"/>
            <ImageView
                android:layout_width="194dp"
                android:layout_height="213dp"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="80dp"
                android:layout_marginBottom="-80dp"
                android:scaleType="fitXY"
                android:src="@drawable/bola_amarela_inferior"
                android:contentDescription="@string/contentDescription_Bola_amarela_inferior"/>



    </FrameLayout>
</androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>